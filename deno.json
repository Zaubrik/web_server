{
  "tasks": {
    "test": "deno test --check --unstable --allow-all",
    "serve": "deno run -A server.ts"
  },
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable", "deno.ns"],
    "verbatimModuleSyntax": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "checkJs": true
  }
}
